extends layout

block content
	main
		div(class='col-8 mx-auto')
			h1 Hi #{user}
			
			.row
				.col
					h2 Your polls:
					ul
						each poll in polls
							li
								a(href=poll.url) #{poll.title}
						else
							li You haven't made any polls yet.

				.col
					h2 New Poll
					if (message.length>0)
						div(class='alert alert-danger') #{message}
				
					form(method='POST' action='/polls/create')
						div(class='form-group row')
							label(for='title') Poll Title
							input(class='form-control' name='title' type='text')
						div(class='form-group row')
							label(for='option1') Option 1
							input(class='form-control' name='option1' type='text')
						div(class='form-group row')
							label(for='option2') Option 2
							input(class='form-control' name='option2' type='text')
						div(class='form-group row')
							label(for='option3') Option 3
							input(class='form-control' name='option3' type='text')
						div(class='form-group row')
							label(for='option4') Option 4
							input(class='form-control' name='option4' type='text')
						input(name='submit' class='btn btn-primary' type='submit')